<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhuxn.inforelease.shiro.orm.mapper.RoleMapper">
	<resultMap type="Role" id="RoleResultMap">
		<id column="id" property="id" />
		<result column="code" property="code" />
		<result column="name" property="name" />
	</resultMap>
	
	<select id="listByUser" resultMap="RoleResultMap">
		SELECT r.id,r.code
		FROM t_role r JOIN t_user_role ur ON r.id=ur.role_id
		WHERE ur.user_id=#{userId}
	</select>
	<select id="selectById" resultMap="RoleResultMap">
		SELECT id, code, name
		FROM t_role
		WHERE id=#{param1}
	</select>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id" >
		INSERT INTO
		t_role(code,name)
		VALUES(#{code},#{name})
	</insert>
	<select id="selectByNameAndCode"  resultMap="RoleResultMap">
		SELECT id, code, name
		FROM t_role
		WHERE code = #{param1}
		OR name = #{param2}
	</select>
	<select id="selectList"  resultMap="RoleResultMap">
		SELECT id, code, name
		FROM t_role
	</select>
</mapper>